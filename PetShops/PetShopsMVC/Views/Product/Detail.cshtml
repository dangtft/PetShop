@model PetShopsMVC.Models.Products

<h1>Detail Product</h1>

<div>
    <label>Name:</label>
    <span>@Model.ProductName</span>
</div>
<div>
    <label>Description:</label>
    <span>@Model.ProductDescription</span>
</div>
<div>
    <label>Image:</label>
    <img src="@Model.ProductImage" alt="@Model.ProductName" />
</div>
<div>
    <label>Price:</label>
    <span>@Model.ProductPrice</span>
</div>
<div>
    <label>Saling:</label>
    <span>@(Model.IsSaling )</span>
</div>

<div>
    <a asp-controller="ShoppingCart" asp-action="AddToShoppingCart" asp-route-pId="@Model.ProductId">Add Shopping Cart </a>
</div>
