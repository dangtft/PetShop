@model IEnumerable<PetShopMVC.DTOs.OrderDTO>
@* Place Order view content *@

<h1>All Orders</h1>

<table class="table">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Address</th>
            <th>Order Total</th>
            <th>Order Placed</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.FirstName</td>
                <td>@order.LastName</td>
                <td>@order.Email</td>
                <td>@order.Phone</td>
                <td>@order.Address</td>
                <td>@order.OrderTotal</td>
                <td>@order.OrderPlaced</td>
            </tr>
        }
    </tbody>
</table>
